# Test Spec
selectors:
#    src:
#        tenant      : filter://overlay=VLAN,type=TENANT
#        segment     : filter://any
#        endpoint    : filter://remote=False
#        interface   : filter://any
#    dst:
#        tenant      : filter://overlay=VLAN,type=TENANT
#        segment     : filter://any
#        endpoint    : filter://remote=True
#        interface   : filter://any
#    flow            : filter://fwtype=L2,type=IPV4,dport=4791,proto=UDP,label=RDMA
    rdmasession     :
        lqp         : filter://svc=0
        rqp         : filter://svc=0
        base        : filter://any
#    maxflows    : 1
#    maxrdmasessions     : 1

packets:
    - packet:
        id          : BASE_PKT # Base packet
        payloadsize : 64
        template    : ref://factory/packets/id=PAYLOAD
        headers     :
            payload:
                data    : pattern-random://0/255/1

buffers:
    - buffer:
        id      : BUF
        template: ref://factory/templates/id=RDMA_BUFFER
        fields:
           slab    : callback://rdma/rdma/GetNewSlab
           offset  : 0
           segments:
               - size    : ref://testcase/packets/id=BASE_PKT/size
                 data    : ref://testcase/packets/id=BASE_PKT/rawbytes

descriptors:
    - descriptor:
        id      : LI_DESC_1
        template: ref://factory/templates/id=DESC_RDMA_SQ
        fields:
            op_type : 9  # OP_TYPE_LOCAL_INV
            wrid    : ref://testcase/pvtdata/wrid_1

            local_inv:
                l_key: callback://rdma/rdma/GetMrSlabLkey/id=BUF

    - descriptor:
        id      : LI_DESC_2
        template: ref://factory/templates/id=DESC_RDMA_SQ
        fields:
            op_type : 9  # OP_TYPE_LOCAL_INV
            wrid    : ref://testcase/pvtdata/wrid_2

            local_inv:
                l_key: callback://rdma/rdma/GetMrSlabLkey/id=BUF

    - descriptor:
        id      : EXP_CQ_DESC_1
        template: ref://factory/templates/id=DESC_RDMA_CQ_SEND
        fields:
            wrid   : ref://testcase/pvtdata/wrid_1
            qid: ref://testcase/config/rdmasession/lqp/id
            #op_type: 9  # OP_TYPE_LOCAL_INV
            status : 0  # CQ_STATUS_SUCCESS
            color  : callback://rdma/rdma/GetReqRxCQExpColor/cq_wqe_num=0
            error  : 0
            type   : 3 #CQE_TYPE_SEND_NPG

    - descriptor:
        id      : EXP_CQ_DESC_2
        template: ref://factory/templates/id=DESC_RDMA_CQ_SEND
        fields:
            wrid   : ref://testcase/pvtdata/wrid_2
            qid: ref://testcase/config/rdmasession/lqp/id
            #op_type: 9  # OP_TYPE_LOCAL_INV
            status : 0  # CQ_STATUS_SUCCESS
            color  : callback://rdma/rdma/GetReqRxCQExpColor/cq_wqe_num=1
            error  : 0
            type   : 3 #CQE_TYPE_SEND_NPG


session:
    - step:
        trigger:
            descriptors:
                - descriptor:
                    object  : ref://testcase/descriptors/id=LI_DESC_1
                    ring    : ref://testcase/config/rdmasession/lqp/sq/rings/id=SQ
            
            doorbell:
                object: ref://testcase/config/rdmasession/lqp/sq/rings/id=SQ/doorbell
                fields:
                    upd : 0x9 # PI from DB data and DB_SCHED_EVAL
       
        expect:
            descriptors:
                - descriptor:
                    object  : ref://testcase/descriptors/id=EXP_CQ_DESC_1
                    ring    : ref://testcase/config/rdmasession/lqp/sq_cq/rings/id=CQ

    - step:
        trigger:
            descriptors:
                - descriptor:
                    object  : ref://testcase/descriptors/id=LI_DESC_2
                    ring    : ref://testcase/config/rdmasession/lqp/sq/rings/id=SQ

            doorbell:
                object: ref://testcase/config/rdmasession/lqp/sq/rings/id=SQ/doorbell
                fields:
                    upd : 0x9 # PI from DB data and DB_SCHED_EVAL

        expect:
            descriptors:
                - descriptor:
                    object  : ref://testcase/descriptors/id=EXP_CQ_DESC_2
                    ring    : ref://testcase/config/rdmasession/lqp/sq_cq/rings/id=CQ

