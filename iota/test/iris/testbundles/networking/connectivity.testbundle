meta:
    name    : connectivity
    os      : [ linux, freebsd, esx, windows ]
    nics    : [ pensando, mellanox, intel, broadcom ]
    #targetcount : 35

testcases:
    -   name    : Ping_Local_Workloads
        testcase: testcases.networking.ping
        stress  : True
        disable : False
        args    :
            type: local_only
            #timeout : 60
        iterators :
            type    : nested
            pktsize : [ 64, 128, 256, 512, 1024, 2048, 4096, 8192]
            ipaf    : [ ipv4, ipv6 ]

    -   name    : Ping_Remote_Workloads
        testcase: testcases.networking.ping
        stress  : True
        disable : False
        args    :
            type: remote_only
        iterators :
            type    : nested
            pktsize : [64, 128, 256, 512, 1024, 2048, 4096, 8192]
            ipaf    : [ ipv4, ipv6 ]

    -   name    : Ping_Bond
        testcase: testcases.networking.ping_bond
        stress  : True
        disable : False
        enable  : True
        ignore  : True
        args    :
            port_shut_time: 60
            failover_delay: 2
        iterators :
            type    : nested
            pktsize : [64, 256, 1024]
            ipaf    : [ ipv4]

    -   name    : Iperf_Remote_Workloads
        testcase: testcases.networking.iperf
        stress  : True
        iterators:
            type      : nested
            proto     : [ tcp ]
            bandwidth : [ 10Gbps, 25Gbps, 50Gbps, 100Gbps ]
        args    :
            type: remote_only

    -   name    : Iperf_Bond
        testcase: testcases.networking.iperf_bond
        stress  : True
        iterators:
            type      : nested
            proto     : [ tcp ]
