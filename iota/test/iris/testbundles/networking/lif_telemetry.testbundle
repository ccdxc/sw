#
# This test-bundle provides LIF ERSPAN testing support in 
# - Useg-Enforced
# - Transparent-Flowaware
# - Transparent-basenet
# modes
#
meta:
    name              : lif_telemetry
    nics              : [ pensando, mellanox, intel, broadcom ]
    os                : [ linux, esx, freebsd, windows ]
    targetcount       : 1

testcases:
    -   name          : LifErspanInbandCollector
        testcase      : testcases.expanded_telemetry.lif_erspan_collector
        iterators     :
            type      : nested
            pktsize   : [128]
            peer      : [remote]
            collector : [local, remote]
            session   : [single, multiple]
            vlan      : [native, tag]
            iftype    : [uplink]
            direction : [ingress, egress, both]
            ccount    : [1, 2, 3, 4, 5, 6, 7, 8]
            collection: [unified]
            erspan    : [mixed]
            vlan_strip: [mixed]
        args          :
            type      : sanity
            ps_2263   : [bypass]
            ps_2790   : [bypass]
            pkt_count : [bypass]

