meta:
    name    : telemetry
    nics    : [ pensando, mellanox, intel, broadcom ]
    os      : [ linux, esx ]
    targetcount : 72

testcases:
    -   name    : Ping_Mirror_Policy
        testcase: testcases.telemetry.ping_mirror_policy
        enable  : True
        ignore  : True
        args    :
            type: remote_only
            collector: 192.168.100.101
        iterators :
            type    : nested
            pktsize : [128]
            proto   : [tcp, udp, icmp, mixed]

    -   name    : Flowmon_Policy
        testcase: testcases.telemetry.flowmon_policy
        enable  : True
        args    :
            type: remote_only
            collector: 192.168.100.103
        iterators :
            type    : nested
            pktsize : [128]
            proto   : [tcp, udp, icmp, mixed]

