meta:
    name    : filters
    os      : [ linux, freebsd ]
    nics    : [ pensando, mellanox, intel, broadcom ]
    targetcount : 4

testcases:
    -   name    : Unicast_MAC_Filter
        testcase: testcases.filters.unicast_mac_filter
        stress  : True
        disable : False
        ignore  : False
        iterators :
            type       : nested
            mac_change : [ no, yes ]
            pktsize    : [ 128 ]
            ipaf       : [ ipv4 ]
            #ipaf       : [ ipv6, ipv4 ]
        args :
            timeout : 7200

    -   name    : Broadcast_MAC_Filter
        testcase: testcases.filters.broadcast_mac_filter
        stress  : True
        disable : False
        ignore  : False
        args :
            timeout : 7200

    -   name    : Multicast_MAC_Filter
        testcase: testcases.filters.multicast_mac_filter
        stress  : True
        disable : False
        ignore  : False
        args :
            timeout : 7200

