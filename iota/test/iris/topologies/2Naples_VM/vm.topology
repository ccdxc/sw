meta:
    name: 2Naples_VM
    description: 2Naples VM Topology

nodes:
    - node: node1
      name: node1
      role: auto
      workloads:
        esx:
            type       : WORKLOAD_TYPE_VM
            image      : "build-1007"
            ncpu       : 4
            memory     : 4
            #Max number of concurrent workloads
            concurrent : 25
        linux:
            type    : WORKLOAD_TYPE_BARE_METAL
            image   : "N/A"


    - node: node2
      name: node2
      role: auto
      workloads:
        esx:
            type    : WORKLOAD_TYPE_VM
            image   : "build-1007"
            ncpu       : 4
            memory     : 4
            #Max number of concurrent workloads
            concurrent : 256
        linux:
            type    : WORKLOAD_TYPE_BARE_METAL_MAC_VLAN_ENCAP
            image   : "N/A"
