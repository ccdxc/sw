# Scale VxLAN Topology Specification for apulu 8G DSC in Host mode
meta:
    id: TOPO_VxLAN_HOSTMODE_8G_SCALE

# 1 Device
# 1 security profile
# 9 VPCs (1 underlay + 8 Tenants)
# 8 Subnets (as we can have only 8 Host interfaces)
# 128 VNICs (16 per subnet)
# 4096 Local mappings (128 per vnic)
# 4096 Remote mappings (local mappings of node1)
# 1024 V4 Route table (1023 routes per route table)
# 384 V4 Security Policy (4 rules per policy. TODO: generate 1023 random rules)
# 2047 Tunnels (1023 underlay, 1024 underlay-ecmp)
# 1602 Nexthops (1600 overlay + 2 underlay)
# 360 NexthopGroups (each has random [1-8] no of nexthops)
# 2 L3 Uplink Interfaces
# 2 Dhcp Policies (relay)
# 48 Nat
# 1 BGP
# 2 BGP Peer
# 2 BGP Peer AF
# 6 Policers (3 rx & 3 tx)

device:
    id          : 1
    mode        : host
    stack       : ipv4
    bridging    : false
    learning    : false
    ipaddress   : '40.40.40.40'
    gateway     : '1.0.0.1'
    macaddress  : macaddr/0000.bbbb.bbb1
    encap       : vxlan
    tunnel      :
        - count : 1023
          type  : underlay
          srcaddr    : '40.40.40.40'
          dstaddr    : '30.30.30.30'
          macaddress : macaddr/0000.bbbb.bbb1
          encap      : vxlan
          nhid       : 1
        - count : 1024
          type  : underlay-ecmp
uplink:
    - entry:
        id      : uplink0
        port    : 1
        mode    : switch
        status  : UP
    - entry:
        id      : uplink1
        port    : 2
        mode    : switch
        status  : UP

security_profile:
  id              : 1
  tcpidletimeout  : 1000
  udpidletimeout  : 1000
  icmpidletimeout : 1000

vpc:
    - id         : 100
      stack      : ipv4
      count      : 1
      type       : underlay
      interface:
        - iid           : 1
          iftype        : l3
          ifadminstatus : UP
          ipprefix      : '30.1.0.2\24'
          macaddress    : macaddr/00ae.cd00.14ce
          portid        : 1
          encap         : none
        - iid           : 2
          iftype        : l3
          ifadminstatus : UP
          ipprefix      : '30.2.0.2\24'
          macaddress    : macaddr/00ae.cd00.14cd
          portid        : 2
          encap         : none
      nexthop:
        - count      : 1
          type       : underlay
          l3intfid   : 1
          macaddress : macaddr/00ae.cd00.4fde
        - count      : 1
          type       : underlay
          l3intfid   : 2
          macaddress : macaddr/00ae.cd00.4fdd
      bgpglobal:
        - localasn      : 100
          routerid      : 40.40.40.40
      bgppeer:
        # underlay bgp peer 1
        - peeraddr      : 30.1.0.1
          localaddr     : 30.1.0.2
          adminstate    : 1
          sendcomm      : true
          sendextcomm   : true
          connectretry  : 5
          rrclient      : false
          # specify interface to override ip addresses from testbed json
          interface     : "Uplink0"
          remoteasn     : 100
          holdtime      : 180
          keepalive     : 60
          bgppeeraf:
              peeraddr  : 30.1.0.1
              localaddr : 30.1.0.2
              afi       : ipv4
              safi      : unicast
        # underlay bgp peer 2
        - peeraddr      : 30.2.0.1
          localaddr     : 30.2.0.2
          adminstate    : 1
          sendcomm      : true
          sendextcomm   : true
          connectretry  : 5
          rrclient      : false
          # specify interface to override ip addresses from testbed json
          interface     : "Uplink1"
          remoteasn     : 100
          holdtime      : 180
          keepalive     : 60
          bgppeeraf:
              peeraddr  : 30.2.0.1
              localaddr : 30.2.0.2
              afi       : ipv4
              safi      : unicast
      dhcprelay:
        - serverip : '100.1.1.1'
          agentip  : '1.1.1.1'
        - serverip : '100.1.1.2'
          agentip  : '1.1.1.1'
        - serverip : '100.1.1.3'
          agentip  : '1.1.1.1'

    - stack  : ipv4
      count  : 8
      type   : tenant
      subnet:
        - count     : 1
          v4prefixlen : 10
          v6prefixlen : 64
          vnic:
            - count     : 1
              ipcount   : 32
              public    : true
              tagged    : false
              policy:
                count   : 5
              rxpolicer : 1
              txpolicer : 2
            - count     : 3
              ipcount   : 32
              public    : true
              tagged    : true
              policy:
                count   : 5
              rxpolicer : 3
              txpolicer : 4
            - count     : 12
              ipcount   : 32
              public    : true
              tagged    : true
              rxpolicer : 5
              txpolicer : 6
          rmap:                       # Remote IP mappings per subnet
            # get it from local mapping of other node
            - count : 0 #204800

      nat:
        count : 1
        prefixlen : 32
        addrtype : PUBLIC_AND_SERVICE
        protocol : tcp,udp,icmp

      nexthop:
        - type : overlay
          count : 100
        - type : overlay
          dual-ecmp : true
          count : 100
      nexthop-group:
        - type : underlay
          count : 15
        - type : overlay
          count : 15
        - type : overlay
          dual-ecmp : True
          count : 15
      routetbl:
        - type: base
          routetype: adjacent
          count : 128
          v4base: '64.0.0.0\8'
          v4prefixlen : 24
          nv4routes   : 1024
          v6base: '2000::\65'
          v6prefixlen : 96
          nv6routes   : 0
          v4routes:
          v6routes:
          teptype : underlay
          nat:
            level : route # all routes will have static nat enabled
            type  : static

      policy:
        - type : specific
          count : 4
          policytype : default
          direction : bidir

policer:
  - id: 1
    direction: ingress
    type: pps
    rate: 750000
    burst: 7500000
  - id: 2
    direction: egress
    type: bps
    rate: 850000
    burst: 8500000
  - id: 3
    direction: ingress
    type: pps
    rate: 950000
    burst: 9500000
  - id: 4
    direction: egress
    type: pps
    rate: 400000
    burst: 1400000
  - id: 5
    direction: ingress
    type: bps
    rate: 500000
    burst: 1500000
  - id: 6
    direction: egress
    type: pps
    rate: 600000
    burst: 1600000
