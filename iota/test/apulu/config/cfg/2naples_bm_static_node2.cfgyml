# VxLAN Topology Specification
meta:
    id: TOPO_VxLAN_HOSTMODE

device:
    id          : 1
    mode        : host # bitw (default), host
    stack       : ipv4 # ipv4 (default), ipv6
    bridging    : false # false (default), true
    learning    : false # false (default), true
    overlay     : false # false (default), true
    ipaddress   : '40.40.40.40' # Taken from resmgr
    gateway     : '1.0.0.1' # Taken from resmgr
    macaddress  : macaddr/0000.bbbb.bbb1
    encap       : vxlan # vxlan or mplsodup

uplink:
    - entry:
        id      : uplink0
        port    : 1
        mode    : switch
        status  : UP
    - entry:
        id      : uplink1
        port    : 2
        mode    : switch
        status  : UP

security_profile:
    id        : 1
    tcpidletimeout : 1000
    udpidletimeout : 1000
    icmpidletimeout : 1000

vpc:
    - id         : 100
      stack      : ipv4 # dual, ipv4 , ipv6
      count      : 1
      type       : underlay
      interface:
        - iid           : 1
          iftype        : l3
          ifadminstatus : UP
          ipprefix      : '30.1.0.2\24'
          macaddress    : macaddr/00ae.cd00.14ce
          portid        : 1
          encap         : none
        - iid           : 2
          iftype        : l3
          ifadminstatus : UP
          ipprefix      : '30.2.0.2\24'
          macaddress    : macaddr/00ae.cd00.14cd
          portid        : 2
          encap         : none
        - iid           : 3
          iftype        : loopback
          ifadminstatus : UP
          ipprefix      : '40.40.40.40\32'
          encap         : none
      nexthop:
        - id         : 1
          count      : 1
          type       : underlay
          l3intfid   : 1
          macaddress : macaddr/00ae.cd00.4fde
        - id         : 2
          count      : 1
          type       : underlay
          l3intfid   : 2
          macaddress : macaddr/00ae.cd00.4fdd
      bgpglobal:
        - localasn      : 100
          routerid      : 40.40.40.40
      bgppeer:
        # underlay bgp peer 1
        - peeraddr      : 30.1.0.1
          localaddr     : 30.1.0.2
          adminstate    : 1
          sendcomm      : true
          sendextcomm   : true
          connectretry  : 5
          rrclient      : false
          # specify interface to override ip addresses from testbed json
          interface     : "Uplink0"
          remoteasn     : 100
          holdtime      : 180
          keepalive     : 60
          bgppeeraf:
              peeraddr  : 30.1.0.1
              localaddr : 30.1.0.2
              afi       : ipv4
              safi      : unicast
        # underlay bgp peer 2
        - peeraddr      : 30.2.0.1
          localaddr     : 30.2.0.2
          adminstate    : 1
          sendcomm      : true
          sendextcomm   : true
          connectretry  : 5
          rrclient      : false
          # specify interface to override ip addresses from testbed json
          interface     : "Uplink1"
          remoteasn     : 100
          holdtime      : 180
          keepalive     : 60
          bgppeeraf:
              peeraddr  : 30.2.0.1
              localaddr : 30.2.0.2
              afi       : ipv4
              safi      : unicast
    - id         : 1
      stack      : ipv4 # dual, ipv4 , ipv6
      count      : 1
      type       : tenant
      tunnel:
        - id         : 1
          count      : 1
          type       : underlay
          srcaddr    : '40.40.40.40'
          dstaddr    : '30.30.30.30'
          macaddress : macaddr/0000.bbbb.bbb1
          encap      : vxlan
          nhid       : 1
      dhcppolicy:
        - id               : 10
          serverip         : '2.1.0.1'
          ntpserver        : '2.1.0.5'
          routers          : '2.1.0.1'
          dnsserver        : '2.1.0.1'
          domainname       : "pensando.io"
          filename         : "test"
          interfacemtu     : 9000
        - id               : 11
          serverip         : '64.0.0.1'
          ntpserver        : '64.0.0.5'
          routers          : '64.0.0.1'
          dnsserver        : '64.0.0.1'
          domainname       : "pensando.io"
          filename         : "test"
          interfacemtu     : 9000
        - id               : 12
          serverip         : '10.0.200.1'
          ntpserver        : '10.0.200.5'
          routers          : '10.0.200.1'
          dnsserver        : '10.0.200.1'
          domainname       : "pensando.io"
          filename         : "test"
          interfacemtu     : 9000
        - id               : 13
          serverip         : '9.0.0.1'
          ntpserver        : '9.0.0.5'
          routers          : '9.0.0.1'
          dnsserver        : '9.0.0.1'
          domainname       : "pensando.io"
          filename         : "test"
          interfacemtu     : 9000
      subnet:
        - id               : 1
          count            : 1
          v4prefixlen      : 24
          v6prefixlen      : 64
          v4prefix         : '2.1.0.0\24'
          fabricencap      : vxlan # vxlan or mplsodup
          fabricencapvalue : 202
          v4routerip       : '2.1.0.1'
          vroutermac       : macaddr/0055.0100.0001
          dhcppolicy       : 10
          vnic:
            - id        : 1
              count     : 1             # 1 untagged VNIC
              vmac      : macaddr/00ae.cd00.000a
              ipcount : 1             # Local IP mapping per vnic
              lmap    :
                - id       : 1
                  count    : 1
                  keytype  : l3
                  lmacaddr : macaddr/00ae.cd00.000a
                  lipaddr  : '2.1.0.3'
              srcguard: false         # true or false (default false)
              public  : false
              tagged  : false         # true or false (default true)
              remoteroutes :
                    - '3.1.0.0\24'
                    - '9.0.0.0\24'
                    - '10.0.200.0\24'
                    - '64.0.0.0\24'
          rmap:                       # Remote IP mappings per subnet
            - id       : 2
              count    : 1
              keytype  : l3
              rmacaddr : macaddr/00ae.cd00.0811
              ripaddr  : '2.1.0.2'
              tunnelid : 1
        - id               : 2
          count            : 1
          v4prefixlen      : 24
          v4prefix         : '3.1.0.0\24'
          fabricencap      : vxlan # vxlan or mplsodup
          fabricencapvalue : 302
          rmap:                       # Remote IP mappings per subnet
            - id       : 3
              count    : 1
              keytype  : l3
              rmacaddr : macaddr/00ae.cd00.0812
              ripaddr  : '3.1.0.2'
              tunnelid : 1
        - id               : 3
          count            : 1
          v4prefixlen      : 24
          v4prefix         : '9.0.0.0\24'
          fabricencap      : vxlan # vxlan or mplsodup
          fabricencapvalue : 902
          v4routerip       : '9.0.0.1'
          vroutermac       : macaddr/0055.0100.0004
          dhcppolicy       : 13
          vnic:
            - id        : 3
              count     : 1             # 1 untagged VNIC
              vmac      : macaddr/00ae.cd00.000d
              ipcount : 1             # Local IP mapping per vnic
              lmap    :
                - id       : 2
                  count    : 1
                  keytype  : l3
                  lmacaddr : macaddr/00ae.cd00.000d
                  lipaddr  : '9.0.0.3'
              srcguard: false         # true or false (default false)
              public  : false
              tagged  : true         # true or false (default true)
              vnicencapvalue : 999
              vnictype : "local"
              remoteroutes :
                    - '3.1.0.0\24'
                    - '2.1.0.0\24'
                    - '10.0.200.0\24'
                    - '64.0.0.0\24'
          rmap:                       # Remote IP mappings per subnet
            - id       : 4
              count    : 1
              keytype  : l3
              rmacaddr : macaddr/00ae.cd00.0813
              ripaddr  : '9.0.0.2'
              tunnelid : 1
        # For node1 this is an igw route, for node2 a local vnic
        - id               : 100
          count            : 1
          v4prefixlen      : 24
          v6prefixlen      : 64
          v4prefix         : '64.0.0.0\24'
          fabricencap      : vxlan # vxlan or mplsodup
          fabricencapvalue : 60001
          v4routerip       : '64.0.0.1'
          vroutermac       : macaddr/0055.0100.0002
          dhcppolicy       : 11
          vnic:
            - id        : 100
              count     : 1             # 1 untagged VNIC
              vmac      : macaddr/00ae.cd00.000b
              ipcount : 1             # Local IP mapping per vnic
              lmap    :
                - id       : 100
                  count    : 1
                  keytype  : l3
                  lmacaddr : macaddr/00ae.cd00.000b
                  lipaddr  : '64.0.0.2'
              srcguard: false         # true or false (default false)
              public  : false
              tagged  : false         # true or false (default true)
              vnictype : "igw"
              remoteroutes :
                    - '50.5.0.0\16'
                    - '12.12.12.0\24'
                    - '3.1.0.0\24'
                    - '2.1.0.0\24'
                    - '9.0.0.0\24'
                    - '10.0.200.0\24'
        # For node1 this is a service route (twice NAT), for node2 a local vnic
        - id               : 101
          count            : 1
          v4prefixlen      : 24
          v4prefix         : '10.0.200.0\24'
          fabricencap      : vxlan # vxlan or mplsodup
          fabricencapvalue : 60002
          v4routerip       : '10.0.200.1'
          vroutermac       : macaddr/0055.0100.0003
          dhcppolicy       : 12
          vnic:
            - id        : 101
              count     : 1             # 1 untagged VNIC
              vmac      : macaddr/00ae.cd00.000c
              ipcount : 1             # Local IP mapping per vnic
              lmap    :
                - id       : 101
                  count    : 1
                  keytype  : l3
                  lmacaddr : macaddr/00ae.cd00.000c
                  lipaddr  : '10.0.200.2'
              srcguard: false         # true or false (default false)
              public  : false
              tagged  : false         # true or false (default true)
              vnictype : "igw_service"
              remoteroutes :
                    - '10.1.0.0\16'
                    - '2.1.0.0\24'
                    - '3.1.0.0\24'
                    - '9.0.0.0\24'
                    - '64.0.0.0\24'
      nexthop:
        - id         : 3
          type       : overlay
          count      : 1
          tunnelid   : 1
      routetbl:
             - type: specific # route table with disjoint routes
               count : 1 # always 1 if routes specified by user
               routetype: disjoint
               teptype : underlay
               v4routes:
                   - '10.10.0.0\16'
                   - '50.5.0.0\16'
                   - '10.1.199.0\24'
                   - '12.12.12.0\24'

      policy:
             - type : specific
               policytype : default
               direction : bidir

    - id               : 51
      stack            : ipv4 # dual, ipv4 , ipv6
      count            : 1
      type             : control
      fabricencap      : vxlan # vxlan or mplsodup
      fabricencapvalue : 11
      interface:
        - iid           : 51
          iftype        : control
          ifadminstatus : UP
          ipprefix      : '11.1.2.3\24'
          gateway       : '11.1.2.1'
          macaddress    : macaddr/feff.0b01.0203
      subnet:
        - id               : 51
          count            : 1
          v4prefixlen      : 10
          v4prefix         : '11.0.0.0\8'
          hostifidx        : 0x80000046
          fabricencap      : vxlan # vxlan or mplsodup
          fabricencapvalue : 12
          v4routerip       : '11.1.2.1'
          vroutermac       : macaddr/0066.0100.0001
          vnic:
            - id        : 51
              count     : 1             # 1 untagged VNIC
              vmac      : macaddr/feff.0b01.0203
              hostifidx : 0x80000046
              ipcount : 1             # Local IP mapping per vnic
              lmap    :
                - id       : 51
                  count    : 1
                  keytype  : l3
                  lmacaddr : macaddr/feff.0b01.0203
                  lipaddr  : '11.1.2.3'
              srcguard: false         # true or false (default false)
              public  : false
              tagged  : false         # true or false (default true)
      nexthop:
        - id         : 51
          type       : overlay
          count      : 1
          tunnelid   : 1
          origin     : discovered
      routetbl:
             - type: specific
               routetype: disjoint
               v4routes:
                   - '11.1.1.0\24'
               teptype : underlay
      policy:
        - type       : specific
          policytype : default
          direction  : bidir

# ECMP:
# Object types and order of creation of objects for different kinds of ECMP.
# In dol, DualEcmp flag is maintained in route, nexthop group and nexthop objs.
# For route table with DualEcmp set to True, only a nexthopgroup with DualEcmp
# set to True is selected.
#
# 1. no-ecmp
#     route       -->     tep         -->     nexthop
#     [OVERLAY]         [UNDERLAY]           [UNDERLAY]
#
# 2. underlay ecmp
#     route       -->     tep         -->     nhgroup      -->     {nexthops}
#   [OVERLAY]           [UNDERLAY-ECMP]      [UNDERLAY ECMP]       [UNDERLAY]
#
# 3. overlay ecmp
#     route       -->     nhgroup     -->     {nexthops}   -->     {teps}  -->     {nexthops}
#    [OVERLAY ECMP]      [OVERLAY ECMP]      [OVERLAY]          [UNDERLAY]        [UNDERLAY]
#
# 4. dual ecmp
#     route       -->     nhgroup     -->     {nexthops}   -->     {teps}  -->     {nhgroup}    -->   {{nexthops}}
#     [OVERLAY ECMP]      [OVERLAY ECMP]      [OVERLAY]          [UNDERLAY ECMP]  [UNDERLAY ECMP]       [UNDERLAY]
